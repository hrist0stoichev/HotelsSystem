@model HotelsSystem.Web.InputModels.Area.AddAreaInputModel
@{
    ViewBag.Title = "Add Area";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Add", "Area", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="row text-center">
            <div class="col-md-2">
                @Html.LabelFor(c => c.Name, new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Добави град/село" class="btn btn-primary btn-lg" />
        </div>
    </div>
}
