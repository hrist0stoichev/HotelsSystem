@using PagedList.Mvc;
@using PagedList;
@model PagedList<HotelsSystem.Web.ViewModels.Home.IndexHotelViewModel>
@{
    ViewBag.Title = "Search";
}
<div class="container">
    <h1>Най-преглеждани</h1>
    <div class="row">
        <div class="col-md-4">
            <a href="~/SearchPlace/Index?placeType=Хотел&areaName=@ViewBag.AreaName" class="btn btn-lg btn-default">Хотели</a>
        </div>
        <div class="col-md-4">
            <a href="~/SearchPlace/Index?placeType=Къща&areaName=@ViewBag.AreaName" class="btn btn-lg btn-default">Къщи</a>
        </div>
        <div class="col-md-4">
            <a href="~/SearchPlace/Index?placeType=Вила&areaName=@ViewBag.AreaName" class="btn btn-lg btn-default">Вили</a>
        </div>
    </div>
    @foreach (var hotel in Model)
    {
        Html.RenderPartial("_IndexHotelPartial", hotel);
    }
    <div class="row text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, areaName = @ViewBag.AreaName, placeType = @ViewBag.PlaceType }))
        Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Hotels
    </div>
</div>